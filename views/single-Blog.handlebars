<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{Blog.title}}</h2>
      <div>
        Posted by {{Blog.User.username}} on {{format_date Blog.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{Blog.body}}
    </div>
  </article>

  {{#if Blog.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each Blog.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="Blog-id" value="{{Blog.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comments.js"></script>